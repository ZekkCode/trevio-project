# =====================================================
# TREVIO - ENVIRONMENT CONFIGURATION
# =====================================================
# 
# This file contains actual configuration values
# DO NOT commit this file to Git!
# =====================================================

# -----------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------
APP_NAME=Trevio
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Jakarta

# -----------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=trevio
DB_USERNAME=root
DB_PASSWORD=

DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# -----------------------------------------------------
# SESSION CONFIGURATION
# -----------------------------------------------------
SESSION_LIFETIME=120
SESSION_COOKIE_NAME=trevio_session
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# -----------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------
APP_KEY=base64:your_random_app_key_here_change_this_in_production

CSRF_TOKEN_NAME=_csrf_token
CSRF_TOKEN_EXPIRE=3600

PASSWORD_HASH_ALGO=bcrypt
PASSWORD_MIN_LENGTH=8

# -----------------------------------------------------
# MAIL CONFIGURATION
# -----------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@trevio.com
MAIL_FROM_NAME=Trevio Team

MAIL_ENABLED=false

# -----------------------------------------------------
# WHATSAPP CONFIGURATION
# -----------------------------------------------------
WHATSAPP_ENABLED=false
WHATSAPP_PROVIDER=fonnte
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_API_URL=https://api.fonnte.com/send
WHATSAPP_SENDER_NUMBER=6281234567890
WHATSAPP_LOG_MESSAGES=true

# -----------------------------------------------------
# FILE UPLOAD SETTINGS
# -----------------------------------------------------
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=public/uploads

# -----------------------------------------------------
# LOGGING
# -----------------------------------------------------
LOG_LEVEL=debug
LOG_PATH=logs/app.log
LOG_MAX_FILES=30
LOG_QUERIES=true

# -----------------------------------------------------
# CACHE SETTINGS
# -----------------------------------------------------
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# -----------------------------------------------------
# EXTERNAL APIs
# -----------------------------------------------------
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# -----------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------
SHOW_ERRORS=true
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------
# BACKUP SETTINGS
# -----------------------------------------------------
BACKUP_ENABLED=false
BACKUP_PATH=backups/
BACKUP_SCHEDULE=daily

# =====================================================
# SECURITY REMINDERS:
# - Change APP_KEY to a random string
# - Use strong database password in production
# - Keep this file secure and never commit to Git
# - Enable HTTPS in production (SESSION_SECURE=true)
# =====================================================
