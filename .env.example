# =====================================================
# TREVIO - ENVIRONMENT CONFIGURATION TEMPLATE
# =====================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env to Git (it's in .gitignore)
# 4. Keep .env file secure and private
#
# Copy command:
# cp .env.example .env
# =====================================================

# -----------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------
APP_NAME="Trevio"
APP_ENV=development  # development, staging, production
APP_DEBUG=true       # true for dev, false for production
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Jakarta

# -----------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=trevio
DB_USERNAME=root
DB_PASSWORD=

# Database charset
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# -----------------------------------------------------
# XENDIT PAYMENT GATEWAY (SANDBOX)
# -----------------------------------------------------
# Get your API keys from: https://dashboard.xendit.co/
# IMPORTANT: Use SANDBOX keys for development/testing

XENDIT_MODE=sandbox                    # sandbox or production
XENDIT_API_KEY=your_xendit_secret_key_here
XENDIT_PUBLIC_KEY=your_xendit_public_key_here
XENDIT_CALLBACK_TOKEN=your_xendit_callback_token_here

# Xendit Webhook URL (will be: YOUR_DOMAIN/payment/webhook)
XENDIT_WEBHOOK_URL=http://localhost:8000/payment/webhook

# Payment expiry time (in hours)
PAYMENT_EXPIRY_HOURS=24

# -----------------------------------------------------
# SESSION CONFIGURATION
# -----------------------------------------------------
SESSION_LIFETIME=120           # Session lifetime in minutes
SESSION_COOKIE_NAME=trevio_session
SESSION_SECURE=false          # true for HTTPS, false for HTTP
SESSION_HTTP_ONLY=true        # Prevent JavaScript access to session cookie

# -----------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------
# Generate random string for encryption: openssl rand -base64 32
APP_KEY=base64:your_random_app_key_here

# CSRF Token settings
CSRF_TOKEN_NAME=_csrf_token
CSRF_TOKEN_EXPIRE=3600        # CSRF token expiry in seconds

# Password hashing
PASSWORD_HASH_ALGO=bcrypt     # bcrypt, argon2i, argon2id
PASSWORD_MIN_LENGTH=8

# -----------------------------------------------------
# MAIL CONFIGURATION (Optional - for email notifications)
# -----------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@trevio.com
MAIL_FROM_NAME="Trevio Team"

# Enable/Disable email notifications
MAIL_ENABLED=false            # Set to true when mail is configured

# -----------------------------------------------------
# FILE UPLOAD SETTINGS
# -----------------------------------------------------
UPLOAD_MAX_SIZE=5242880       # Max file size in bytes (5MB)
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=public/uploads

# -----------------------------------------------------
# LOGGING
# -----------------------------------------------------
LOG_LEVEL=debug               # debug, info, warning, error
LOG_PATH=logs/app.log
LOG_MAX_FILES=30              # Keep logs for 30 days

# -----------------------------------------------------
# CACHE SETTINGS (Optional)
# -----------------------------------------------------
CACHE_DRIVER=file             # file, redis, memcached
CACHE_LIFETIME=3600           # Cache lifetime in seconds

# -----------------------------------------------------
# EXTERNAL APIs (Optional)
# -----------------------------------------------------
# Google Maps API (for hotel location maps)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# -----------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------
# Show detailed error messages (disable in production)
SHOW_ERRORS=true              # true in dev, false in production

# Query logging (for debugging)
LOG_QUERIES=true              # Log all database queries

# API rate limiting
RATE_LIMIT_ENABLED=false      # Enable API rate limiting
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per minute

# -----------------------------------------------------
# BACKUP SETTINGS (Optional)
# -----------------------------------------------------
BACKUP_ENABLED=false
BACKUP_PATH=backups/
BACKUP_SCHEDULE=daily         # daily, weekly, monthly

# -----------------------------------------------------
# TESTING CREDENTIALS (Development Only)
# -----------------------------------------------------
# These are for development/testing purposes only
# Remove in production!

TEST_ADMIN_EMAIL=admin@trevio.com
TEST_ADMIN_PASSWORD=password123

TEST_USER_EMAIL=john.doe@gmail.com
TEST_USER_PASSWORD=password123

# Xendit Test Cards (Sandbox Mode):
# Success: 4000000000000002
# Failed: 4000000000000010
# 3DS: 4000000000003220

# -----------------------------------------------------
# PRODUCTION SETTINGS (Uncomment for production)
# -----------------------------------------------------
# APP_ENV=production
# APP_DEBUG=false
# SHOW_ERRORS=false
# LOG_LEVEL=error
# SESSION_SECURE=true
# XENDIT_MODE=production
# MAIL_ENABLED=true

# =====================================================
# END OF CONFIGURATION
# =====================================================

# SECURITY REMINDERS:
# - Never commit .env file to Git
# - Use strong, unique passwords
# - Change all default credentials
# - Keep API keys secure
# - Use HTTPS in production
# - Regular security audits
# =====================================================